<h1>Bookings</h1>

<div>
  <a href="/bookings/new">Add New Booking</a>
</div>

<div id="bookings">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Location</th>
        <th>Status</th>
        <th>Duration</th>
        <th>Price</th>
        <th>Customer Name</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <% @bookings.each do |booking| %>
      <tr>
        <td><%= booking.location %></td>
        <td><%= booking.status %></td>
        <td><%= booking.duration %></td>
        <td><%= booking.price %></td>
        <td>
          <a href=<%= "/customers/#{booking.customer.id}" %>>
            <%= booking.customer.name %>
          </a>
        </td>
        <td colspan="3">
          <a href=<%= "/booking/#{booking.id}" %>>Show</a>
          <a href=<%= "/booking/#{booking.id}/edit" %>>Edit</a>
          <%= link_to "Destroy", bookings_path(booking), data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                  } %>
        </td>
      </tr>
    <% end %>
  </table>
</div>
