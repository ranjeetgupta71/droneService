<h4 class="text-center">New Booking Details</h4>

<form action="/bookings" method="post">
  <div class="form-group">
    <label for="location">Location:</label>
    <input type="text" id="location" class="form-control" placeholder="Enter location" name="location" required>
    <br>
  </div>

  <div class="form-group">
    <label for="status">Status</label>
    <input type="text" id="status" class="form-control" placeholder="Enter status" name="status" required>
    <br>
  </div>

  <div class="form-group">
    <label for="duration">Duration</label>
    <input type="text" id="duration" class="form-control" placeholder="Enter duration" name="duration" required>
    <br>
  </div>

  <div class="form-group">
    <label for="price">Price</label>
    <input type="text" id="price" class="form-control" placeholder="Enter price" name="price" required>
    <br>
  </div>

  <button type="submit" class="btn btn-primary">Submit</button>
</form>
