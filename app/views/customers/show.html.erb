<div>
  <p>
    <strong>Customer name:</strong>
    <%= @customer.name %>
  </p>

  <p>
    <strong>Email:</strong>
    <%= @customer.email %>
  </p>

  <p>
    <strong>Phone:</strong>
    <%= @customer.phone %>
  </p>

  <p>
    <a href=<%= "/customers/#{@customer.id}/edit" %>>Edit</a>
    <li><%= link_to "Destroy", customers_path(@customer), data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                  } %></li>
  </p>
</div>
