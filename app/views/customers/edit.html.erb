<form action=<%= "/customers/#{@customer.id}" %> method="put">

  <label for="name">Name</label>
  <input type="text" placeholder="Enter name" id="name" name="name" value=<%= @customer.name %> ><br><br>

  <label for="email">Email</label>
  <input type="text" placeholder="Enter email" id="email" name="email" value=<%= @customer.email %> ><br><br>

  <label for="phone">Phone</label>
  <input type="text" placeholder="Enter phone" id="phone" name="phone" value=<%= @customer.phone %> ><br><br>

  <input type="submit" value="Submit" >
</form>
