<br>
<h4 class="text-center">Edit Customer Details</h4>

<form action=<%= "/customers/#{@customer.id}" %> method="put">
  <div class="form-group">
    <label for="name">Name:</label>
    <input type="text" id="name" class="form-control" placeholder="Enter name" name="name" value=<%= @customer.name %>  required>
    <br>
  </div>

  <div class="form-group">
    <label for="email">Email</label>
    <input type="email" id="email" class="form-control" placeholder="Enter email" name="email" value=<%= @customer.email %> required>
    <br>
  </div>

  <div class="form-group">
    <label for="phone">Phone</label>
    <input type="tel" id="phone" class="form-control" placeholder="Enter phone" name="phone" pattern="[0-9]{10}" value=<%= @customer.phone %> required>
    <br>
  </div>

  <button type="submit" class="btn btn-primary">Submit</button>
</form>
